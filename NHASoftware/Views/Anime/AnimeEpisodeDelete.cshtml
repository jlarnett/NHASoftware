@using NHA.Website.Software.Services.RepositoryPatternFoundationals
@model NHA.Website.Software.Entities.Anime.AnimeEpisode
@inject IUnitOfWork _unitOfWork

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var parentAnime = await _unitOfWork.AnimePageRepository.GetByIdAsync(@Model.AnimePageId);
}


@{
    if (parentAnime != null)
    {
        var sure = $"Are you sure you want to delete this {parentAnime.AnimeName} Episode?";
        <h3>@sure</h3>
    }
}

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodeNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EpisodeNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EpisodeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EpisodeSummary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EpisodeSummary)
        </dd>
    </dl>
    
    <form asp-controller="Anime" asp-action="DeleteEpisodeConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-primary interactable" /> |
        @if (!string.IsNullOrWhiteSpace(ViewData["Reffer"]!.ToString()))
        {
            if (@parentAnime != null)
            {
                <a href="@ViewData["reffer"]" class="interactable">Return to @parentAnime.AnimeName</a>
            }
        }
    </form>
</div>
