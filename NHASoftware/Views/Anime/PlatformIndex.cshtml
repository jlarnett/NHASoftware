@using NHA.Website.Software.Views.Anime.Vms
@model PlatformIndexViewModel
@{
    ViewData["Title"] = "Anime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AnimePages.css">
</head>

@{
    var genreAnimeCounter = @Model.AnimeList.Count;
}

<h1>@Model.Platform <em class="h3 text-primary">(@genreAnimeCounter)</em></h1>

@{
    foreach (var anime in Model.AnimeList)
    {
        <a asp-action="AnimePage" asp-route-id="@anime.Id" asp-controller="Anime" class="link-primary animepage-links">@anime.AnimeName</a>
        <br/>
    }
}
