@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NHA.Website.Software.Views.ViewModels.GameVms.LetterGameIndexViewModel
@{
    ViewData["Title"] = "Anime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/AnimePages.css">
</head>

@{
    var letterAnimeCount = @Model.GameList.Count;
}

<h1>@Model.AlphabetLetter <em class="h3 text-primary">(@letterAnimeCount)</em></h1>

@{
    foreach (var game in Model.GameList)
    {
        <a asp-action="GamePage" asp-route-id="@game.Id" asp-controller="Game" class="link-primary animepage-links">@game.Name</a>
        <br/>
    }
}
