@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NHA.Website.Software.Entities.Forums.ForumPost
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<div class="row h2 m-2">
    Customize Post
</div>
<div class="row m-2">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control "/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group" style="min-width: 100%; width: 0">
                    <label asp-for="ForumText" class="form-label"></label>
                    <textarea asp-for="ForumText" class="form-control text-wrap:normal" type="text" placeholder="Add Forum post text "></textarea>
                    <span asp-validation-for="ForumText" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                @Html.HiddenFor(m => m.CreationDate)
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.UserId)
            </div>
            <div class="form-group">
                @Html.HiddenFor(m => m.ForumTopicId)
                @Html.HiddenFor(m => m.CommentCount)
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    @if (!string.IsNullOrWhiteSpace(ViewData["Reffer"]!.ToString()))
    {
        <a href="@ViewData["reffer"]">Return to Topics</a>
    }
</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
            <script src="~/Scripts/SummerNoteInitialization/SummerNoteSetup.js" type="text/javascript"></script>
        }
    }
