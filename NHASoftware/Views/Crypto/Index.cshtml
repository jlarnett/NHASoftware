
@{
    ViewData["title"] = "Crypto Index";
}


<h1>Crypto Index!</h1>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <h3 class="text-white">Bitcoin</h3>
            <img id="BitcoinPicture" src="Images/BitcoinPhoto.jpg" height="400px" width="100%" class="rounded selected"/>
        </div>
        <div class="col-md-5">
            <h3 class="text-white">Ethereum</h3>
            <img id="EthereumPicture" src="Images/EthereumPhoto.jpeg" height="400px" width="100%" class="rounded"/>
        </div>
    </div>

</div>

<div class="container">
    <div id="CryptoLabel" class="text-white">Coin Symbol: </div>
    <div id="CryptoPrice" class="text-white">USD Price: </div>
</div>

<div class="container">
    <input type="button" class="btn btn-dark" id="Submit" value="Get Crypto"/>
</div>



@section Scripts
{
    <script src="~/Scripts/GetCryptoPrice.js" type="text/javascript"></script>
}
