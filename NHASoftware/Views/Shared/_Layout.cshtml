@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.FeatureManagement.Mvc.TagHelpers
@using NHA.Website.Software.Entities.Identity
@using NHA.Website.Software.FeatureManagement
@using NHA.Website.Software.Services.AccessWarden
@using NHA.Website.Software.Services.FriendSystem
@inject UserManager<ApplicationUser> UserManager
@inject IFriendSystem FriendSystem
@inject IWarden Warden
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anime Social - @ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/Themes/Dark/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Actionbar.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.3/datatables.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet" asp-append-version="true">
    
    <!--Jquery & bootstrap JS scripts!-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!--Customized JS Scripts (Ours)!-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Scripts/Shared/common.js"></script>
    <script src="~/Scripts/Shared/NotifyNHA.js"></script>

    <script src="~/Scripts/Actionbar/Actionbar.js"></script>
    <script src="~/Scripts/ChatSystem/ChatSystem.js"></script>
    <script src="~/Scripts/FriendSystem/Social_FriendList_UI.js"></script>
    <script>
        // Attach to the global window object
        window.setTheme = function(mode) {
            document.body.dataset.bsTheme = mode;
            localStorage.setItem('theme', mode);

            // Update dropdown text
            updateThemeLabel(mode);
        };

        // Function to update the dropdown label
        function updateThemeLabel(mode) {
            const dropdown = document.getElementById("themeDropdown");
            if (dropdown) {
                dropdown.textContent = `Theme: ${mode.charAt(0).toUpperCase() + mode.slice(1)}`;
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme) {
                document.body.dataset.bsTheme = savedTheme;
                // Update dropdown text
                updateThemeLabel(savedTheme);
            } else {
                document.body.dataset.bsTheme = 'light';
                // Update dropdown text
                updateThemeLabel('light');
            }
        });
    </script>
    
    <!--External JS Packages!-->
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.11.3/datatables.js"></script>
    <script type="text/javascript" src='https://unpkg.com/spacetime'></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/jquery-jgrowl/1.4.8/jquery.jgrowl.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-jgrowl/1.4.8/jquery.jgrowl.min.js"></script>


</head>
<body>
<header>
    <!--Navigation Bar-->
    <nav class="navbar navbar-expand-sm border-bottom bg-body-tertiary box-shadow fixed-top p-0" >
        <div class="container-fluid m-0 p-0" style="width: 100%; height: auto;">

                <button class="navbar-toggler ms-auto btn-dark interactable" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" style="font-size:2rem; padding:1rem; min-width: 100px;">
                    <i class="bi bi-pentagon text-success"></i>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                <ul class="navbar-nav flex-column flex-sm-row w-100 flex-sm-grow-0">

                    <li class="nav-item align-self-center interactable w-100 w-sm-auto"><a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item align-self-center interactable w-100 w-sm-auto"><a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Anime" asp-action="Roll">Anime Roll</a></li>
                    <feature name="@FeatureFlags.AnimeEnabled">
                            <li class="nav-item align-self-center interactable w-100 w-sm-auto"><a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Anime" asp-action="Index">Anime Wiki</a></li>
                    </feature>
                    <feature name="@FeatureFlags.GameWikiEnabled">
                            <li class="nav-item align-self-center interactable w-100 w-sm-auto"><a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Game" asp-action="Index">Game Wiki</a></li>
                    </feature>

                    <feature name="@FeatureFlags.ForumsEnabled">
                            <li class="nav-item align-self-center interactable w-100 w-sm-auto"><a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Forum" asp-action="Index">Forums</a></li>
                    </feature>
                    
                    <feature name="@FeatureFlags.CryptoEnabled">
                            <li class="nav-item align-self-center interactable w-100 w-sm-auto"><a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Crypto" asp-action="Index">Crypto Stats</a></li>
                    </feature>

                    @if (Warden.IsAdmin(User))
                    {
                            <li class="nav-item align-self-center interactable w-100 w-sm-auto">
                                <a class="nav-link btn-dark text-light rounded-2 h5 m-0 d-block text-center" asp-area="" asp-controller="Administration" asp-action="CreateRole">Create Role</a>
                        </li>
                    }

                    <li class="nav-item dropdown align-self-center interactable w-100 w-sm-auto">
                            <a class="nav-link dropdown-toggle btn-dark text-light rounded-2 h5 m-0 d-block text-center" id="themeDropdown"
                               href="#" 
                           role="button" 
                           data-bs-toggle="dropdown" 
                           aria-expanded="false">
                            Theme
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item" href="#" onclick="setTheme('light')">Light Mode</a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" onclick="setTheme('dark')">Dark Mode</a>
                            </li>
                        </ul>
                    </li>


                    @{
                        //Returns IEnumerable list of all pending FriendRequestDTOs
                        var requests = await FriendSystem.GetPendingFriendRequestsAsync(UserManager.GetUserId(User)!);

                        if (SignInManager.IsSignedIn(User))
                        {
                            <li class="align-self-center nav-item interactable w-100 w-sm-auto ">
                                <button type="button" class="rounded btn btn-dark m-0" data-bs-toggle="modal" data-bs-target="#friendRequestModal">
                                    <div class="col p-0 position-relative">
                                        <span id="FriendRequestCounter" class="text-danger bg-primary position-absolute top-50 start-50 rounded-circle h5 text-white ps-2 pe-2">@requests.Count()</span>
                                        <span><img src="~/Images/Bell_Icon.png" alt="notification icon image" class="img-fluid"/></span>
                                    </div>
                                </button>
                            </li>
                        }
                    }

                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>


<!--Secondary Action Bar -->

@if (User.Identity!.IsAuthenticated)
{
    <div class="container-fluid ">
        <div class="row align-items-center bg-primary">
                <!--Friend Requests Modal-->
                <div class="modal fade" id="friendRequestModal" tabindex="-1" role="dialog" aria-labelledby="friendModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header border-bottom">
                                <h5 class="modal-title" id="friendModalLabel">Friend Requests</h5>
                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @foreach (var item in @requests)
                                {
                                    <div class="row border-bottom p-2" friend-request-id="@item.Id">
                                        <div class="col-2">
                                            <img src="~/ProfilePictures/@item.SenderUser!.ProfilePicturePath" class="img-fluid"/>
                                        </div>
                                        <p class="col-auto"><a href="~/Users/GetProfiles?userId=@item.SenderUser.Id">@item.SenderUser.DisplayName</a> wants to be your friend!</p>
                                        <div class="col-2">
                                            <button class="accept-friend-request-btn btn-dark col-auto" request-id="@item.Id">Accept</button>
                                            <button class="decline-friend-request-btn btn-dark col-auto" request-id="@item.Id">Decline</button>
                                        </div>
                                    </div>

                                }
                                @if (!requests.Any())
                                {
                                    <div>
                                        No more friend requests! Go add more people! :)
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col"></div>
        </div>
}
@{
    var currentUser = await UserManager.GetUserAsync(User);
    var userIsAdmin = false;

    if (currentUser != null)
    {
        userIsAdmin = await UserManager.IsInRoleAsync(currentUser, "Admin");
    }
}

<!-- Main body Content / Contains current user's id for common.js use -->
<div class="container-fluid bg-body" id="MainPageContentContainer" userId="@UserManager.GetUserId(User)" user-session-active="@SignInManager.IsSignedIn(User).ToString()" admin-user="@userIsAdmin.ToString()">
    <div class="row">
        <div id="LeftMenu" class="col-2 mt-12 d-none d-md-block border-end border-primary bg-transparent p-1">
                @{ await Html.RenderPartialAsync("Sponsers/_SponsorListPartial"); }
        </div>
        <main role="main" class="col p-4 pt-2 mt-12">
            @RenderBody()
        </main>
            <div class="col-2 mt-12 d-none d-md-block border-start border-primary bg-transparent p-1" style="min-height: 75.5em;">
            @{ await Html.RenderPartialAsync("FriendList/_FriendListPartial");}
        </div>
    </div>
</div>

<div class="container-fluid fixed-bottom h-50 pe-none">
    <div class="row align-items-end fixed-bottom">
        <div class="col-2"></div>
        <div class="col row flex-row-reverse p-0" id="ChsContainer">
        </div>
        <div class="col-1"></div>
    </div>
</div>

<!--JS scripts-->

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
