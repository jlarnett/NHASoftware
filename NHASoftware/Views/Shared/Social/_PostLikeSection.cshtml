@model NHA.Website.Software.ConsumableEntities.DTOs.PostDTO
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    var likeSrcImage = (Model.UserLikedPost ? "/images/facebook-like-filled.png" : "/images/facebook-like.png");
    var dislikeSrcImage = (Model.UserDislikedPost ? "/images/dislike-Filled.png" : "/images/dislike_remake.png");
}

<div class="col mt-2">
    <div class="row">
        <!-- Spacer -->
        <div class="col-4"></div>

        <!-- Buttons container -->
        <div class="col d-flex gap-3 align-items-center flex-wrap">
            <!-- Like Block -->
            <div class="d-flex align-items-center gap-1 me-4">
                <div like-counter-post-id="@Model.Id">@Model.LikeCount</div>
                <img class="post-like interactable img-fluid"
                     alt="Post/Comment Like Button"
                     role="button"
                     post-id="@Model.Id"
                     src="@likeSrcImage"
                     style="max-width:24px; height:auto;" />
            </div>

            <!-- Dislike Block -->
            <div class="d-flex align-items-center gap-1">
                <div dislike-counter-post-id="@Model.Id">@Model.DislikeCount</div>
                <img class="post-dislike interactable img-fluid"
                     alt="Post/Comment Dislike Button"
                     role="button"
                     post-id="@Model.Id"
                     src="@dislikeSrcImage"
                     style="max-width:24px; height:auto;" />
            </div>
        </div>
    </div>
</div>