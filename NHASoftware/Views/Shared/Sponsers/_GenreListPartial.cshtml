@using Microsoft.IdentityModel.Tokens
@using NHA.Website.Software.Views.Shared.Sponsers.ViewModel
@model NHA.Website.Software.Views.Shared.Sponsers.ViewModel.GenreListVm

@{
    <div class="align-content-center p-0">
        @{
            var genres = @Model.Genres.Split(';');

            for (int i = 0; i < genres.Length; i++)
            {
                if (Model.Type.Equals(GenreListType.Anime))
                {
                    switch (i)
                    {
                        case 0:
                            <a asp-controller="Anime" asp-action="GenreIndex" asp-route-genre="@genres[i]" class="col-auto text-decoration-none">
                                <span class="badge text-bg-primary border-2 interactable">@genres[i]</span>
                            </a>
                            break;
                        case 1:
                            <a asp-controller="Anime" asp-action="GenreIndex" asp-route-genre="@genres[i]" class="col-auto text-decoration-none">
                                <span class="badge text-bg-success border-2 interactable">@genres[i]</span>
                            </a>
                            break;
                        case 2:
                            <a asp-controller="Anime" asp-action="GenreIndex" asp-route-genre="@genres[i]" class="col-auto text-decoration-none">
                                <span class="badge text-bg-dark border-2 interactable">@genres[i]</span>
                            </a>
                            break;
                    }
                }
                else if (Model.Type.Equals(GenreListType.Game))
                {
                    switch (i)
                    {
                        case 0:
                            <a asp-controller="Game" asp-action="GenreIndex" asp-route-genre="@genres[i]" class="col-auto text-decoration-none">
                                <span class="badge text-bg-primary border-2 interactable">@genres[i]</span>
                            </a>
                            break;
                        case 1:
                            <a asp-controller="Game" asp-action="GenreIndex" asp-route-genre="@genres[i]" class="col-auto text-decoration-none">
                                <span class="badge text-bg-success border-2 interactable">@genres[i]</span>
                            </a>
                            break;
                        case 2:
                            <a asp-controller="Game" asp-action="GenreIndex" asp-route-genre="@genres[i]" class="col-auto text-decoration-none">
                                <span class="badge text-bg-dark border-2 interactable">@genres[i]</span>
                            </a>
                            break;
                    }
                }
                else if (Model.Type.Equals(GenreListType.StreamingPlatform))
                {
                    if(genres[i].IsNullOrEmpty()) continue;
                    string ConvertPlatformToIcon(string platform)
                    {
                        if (platform.Equals("Netflix"))
                        {
                            return "/Images/netflix_logo_icon_170919.png";
                        }

                        if (platform.Equals("Crunchyroll"))
                        {
                            return "/Images/crunchyroll_social_network_network_connection_communication_icon_192251.png";
                        }

                        if (platform.Equals("Hulu"))
                        {
                            return "/Images/brand_hulu_icon_157922.png";
                        }

                        if (platform.Equals("Hulu"))
                        {
                            return "/Images/brand_hulu_icon_157922.png";
                        }

                        if (platform.Equals("Shahid"))
                        {
                            return "/Images/shahid.svg";
                        }

                        if (platform.Equals("HIDIVE"))
                        {
                            return "/Images/HIDIVE_2017 (3).svg";
                        }

                        if (platform.Equals("Animekey"))
                        {
                            return "/Images/AnimeKey (2).WEBP";
                        }

                        if (platform.Equals("Animax Mongolia"))
                        {
                            return "/Images/AnimeMax (2).WEBP";
                        }

                        if (platform.Equals("Disney+"))
                        {
                            return "/Images/icons8-disney-plus-32.png";
                        }

                        return platform.Equals("Tubi TV") ? "/Images/tubi_logo_icon_249346.png" : "";
                    }

                    switch (i)
                    {
                        default:
                            <a asp-controller="Anime" asp-action="PlatformIndex" asp-route-platform="@genres[i]" class="text-decoration-none">
                                <img src="@ConvertPlatformToIcon(genres[i])" alt="@genres[i]" class="me-1 interactable" title="@genres[i]">
                            </a>
                            break;

                    }
                }

            }
        }
    </div>
}