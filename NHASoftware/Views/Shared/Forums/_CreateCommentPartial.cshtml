@model NHA.Website.Software.Entities.Forums.ForumComment

<div class="row">
    <div class="col">
        <form asp-action="Create" asp-controller="ForumComments">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="min-width: 100%; width: 0">
                <textarea asp-for="CommentText" name="CommentText" class="form-control" ></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(c => c.CreationDate)
            </div>
            <div class="form-group">
                @Html.HiddenFor(c => c.UserId)
            </div>
            <div class="form-group">
                @Html.HiddenFor(c => c.ForumPostId)
            </div>
            <div class="d-grid gap-2">
                <input type="submit" value="Create Comment" class=" btn btn-outline-warning"/>
            </div>
        </form>
    </div>
</div>