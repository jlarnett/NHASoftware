@model IEnumerable<NHASoftware.Entities.Subscription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Subscriptions</h1>

<br/>

<div class="container">
    <a asp-action="GenerateSubscriptionReport" class="btn btn-dark">Generate Report</a>
</div>

<div class="container">
    
    <p><a asp-action="Create">Add Subscription</a></p>

    <table id="subscriptions" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Subscription Id</th>
            <th>Subscription Name</th>
            <th>Subscription Day</th>
            <th>Subscription Cost</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts
{
    <script src="~/Scripts/GetSubscriptionsAPI.js" type="text/javascript"></script>
}

